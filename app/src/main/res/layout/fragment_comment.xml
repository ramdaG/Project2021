<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_type_PC"
                    android:layout_width="18dp"
                    android:layout_height="18dp"

                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/fire_icon"
                    app:layout_constraintStart_toEndOf="@+id/cardView2"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_profile_PC"
                        android:layout_width="45dp"
                        android:layout_height="45dp"

                        android:src="@mipmap/profile"
                        app:srcCompat="@mipmap/media_avatar" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/addinfo2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/inter_gtb"
                    android:lineSpacingExtra="1sp"
                    android:text="어쩌구저쩌구 텍스트"
                    android:textColor="#868788"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/cardView2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_address_PC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/inter_gtb"
                    android:lineSpacingExtra="1sp"
                    android:text="인천 가좌동"
                    android:textColor="#526e82"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/txt_name_PC"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/inter_gtb"
                    android:lineSpacingExtra="1sp"
                    android:text="댓글"
                    android:textColor="#696A6A"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/img_com"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_line" />

                <TextView
                    android:id="@+id/txt_comNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/inter_gtb"
                    android:lineSpacingExtra="1sp"
                    android:text="0"
                    android:textColor="#5F5F60"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/img_com"
                    app:layout_constraintEnd_toEndOf="@+id/img_com"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_com" />

                <TextView
                    android:id="@+id/txt_HeartNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/inter_gtb"
                    android:lineSpacingExtra="1sp"
                    android:text="0"
                    android:textColor="#5F5F60"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/img_heartNum1"
                    app:layout_constraintTop_toTopOf="@+id/img_heartNum1" />


                <CheckBox
                    android:id="@+id/img_heart1"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/like_checkbox"
                    android:button="@null"
                    android:checked="false"
                    app:layout_constraintEnd_toStartOf="@+id/img_heartNum1"
                    app:layout_constraintTop_toBottomOf="@+id/img_line" />

                <ImageView
                    android:id="@+id/img_com"
                    android:layout_width="37dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/base_tooltip_on_right"
                    app:layout_constraintEnd_toStartOf="@+id/img_heart1"
                    app:layout_constraintTop_toBottomOf="@+id/img_line"
                    app:srcCompat="@mipmap/base_tooltip_on_right" />

                <ImageView
                    android:id="@+id/img_heartNum1"
                    android:layout_width="37dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#00FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_line"
                    app:srcCompat="@mipmap/base_tooltip_on_right" />

                <ImageView
                    android:id="@+id/img_line"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleX="1.3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addinfo2"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:srcCompat="@mipmap/line" />

                <TextView
                    android:id="@+id/txt_name_PC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_gtb"
                    android:lineSpacingExtra="1sp"
                    android:text="닉네임"
                    android:textColor="#526e82"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/img_type_PC"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/comm_txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/inter_gtb"
                    android:lineSpacingExtra="1sp"
                    android:text="인천 가좌동"
                    android:textColor="#526e82"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/comm_txt_name"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/comm_txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter_gtb"
                    android:lineSpacingExtra="1sp"
                    android:text="닉네임"
                    android:textColor="#526e82"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/comm_img_type"
                    android:layout_width="18dp"
                    android:layout_height="18dp"

                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/fire_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="#FBF1F1"
                android:maxLength="90"
                android:fontFamily="@font/inter_gtb"
                android:gravity="start"
                android:hint="댓글을 입력하세요"
                android:text=""
                android:inputType="textMultiLine"
                android:lineSpacingExtra="8sp"
                android:padding="5dp"
                android:textColor="@color/greyish_brown"
                android:textColorHint="#8E8D8D"
                android:textSize="12sp"
                android:maxLines="3"
                android:scrollbarAlwaysDrawHorizontalTrack="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="299dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/comm_save"
                    android:layout_width="69dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#8E8D8D"
                    android:fontFamily="@font/inter_gtb"
                    android:text="등록"
                    android:textSize="10dp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_comm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constrainedHeight="true"
            />
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>